{% extends 'base.html.twig' %}

{% block title %}Publisher Detail{% endblock %}

{% block body %}

<div class="container mt-3">
    <table class = "table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Publisher ID</th>
                <th scope="col">Company Name</th>
                <th scope="col">Country</th>
                <th scope="col">Founded Year</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="row">{{ publisher.id}}</td>
                <td scope="row">{{ publisher.companyname}}</td>
                <td scope="row">{{ publisher.country}}</td>
                <td scope="row">{{ publisher.founded}}</td>
                <td scope="row">
                    {% if publisher.Image != null %}
                        <img src="{{asset ('images/products/' ~ publisher.image)}}" width="100px" height="120px">
                    {% else %}
                        <img src="{{asset ('images/products/X.png')}}" width="100px" height="120px">
                    {% endif %}
                </td>              
                <td scope="row">
                    <a class="btn btn-success" href="{{ path ('publisher_update', {'id': publisher.id} )}}">Update</a>
                    <a class="btn btn-success" href="{{ path ('publisher_delete', {'id': publisher.id}) }}" onclick="return confirm('This publisher will be deleted!')">Delete</a>
            </tr>
        </tbody>
</div>
{% endblock %}
