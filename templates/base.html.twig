    </head>
    <body>
        {% block nav %}
        <div class="container-fluid mt-2">
                <ul class="nav nav-pills nav-fill">
                    <li class="nav-item">
                        <h2><a class="nav-title text-uppercase" href="{{ path ("publisher_list") }}">Publisher</a></h2>
                    </li>
                    <li class="nav-item">
                        <h2><a class="nav-title text-uppercase"  href="{{ path ("phone_list") }}">Phone</a></h2>
                    </li>
                    <li class="nav-item">
                        <h2><a class="nav-title text-uppercase" href="{{ path ("order_list") }}">Order</a></h2>
                    </li>
                    <li class="nav-item">
                        <h2><a class="nav-title text-uppercase" href="{{ path ('app_logout') }}">Logout</a></h2>
                    </li>
                </ul>
        </div>
        {% endblock %}

        {% block body %}
        
        {% endblock %}
    </body>
</html>
